{
  "manifest_version": 3,
  "name": "Piggy Buddy",
  "version": "0.1.0",
  "description": "A tiny pig to keep you company",
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["pig.css"],
      "run_at": "document_idle"
    }
  ]
}
